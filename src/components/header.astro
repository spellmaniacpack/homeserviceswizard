---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import ThemeSwitcher from "~/components/theme-switcher.astro";
import logoImage from "~/assets/logo.png";
import type { NavItem } from "~/types";

const navItems: Array<NavItem> = [
  { title: "Home", url: "/" },
  { title: "Handyman", url: "/handyman" },
  { title: "HVAC", url: "/hvac" },
  { title: "Plumber", url: "/plumber" },
  { title: "Electrician", url: "/electrician" },
  { title: "Landscaping", url: "/landscaping" },
  { title: "Roofing", url: "/roofing" },
];
---

<header
  id="page-header"
  class="absolute top-0 z-20 flex w-full items-center justify-between border-b border-transparent px-8 py-4 text-white"
>
  <a class="flex items-center gap-3 hover:opacity-80 transition-opacity" href="/">
    <h1 class="sr-only">Home Services Wizard</h1>
    <Image src={logoImage} alt="Home Services Wizard" class="h-10 w-10 object-contain" width={40} height={40} />
    <span class="hidden sm:block font-bold text-lg">
      <span class="logo-text">Home Services</span>
      <span class="text-secondary"> Wizard</span>
    </span>
  </a>
  <div>
    <div class="flex items-center gap-6">
      <nav class="hidden md:block">
        <ul class="flex items-center gap-6">
          {
            navItems.map(({ title, url }) => (
              <li>
                <a class="text-sm font-medium hover:text-secondary transition-colors" href={url}>
                  {title}
                </a>
              </li>
            ))
          }
          <li>
            <a 
              href="tel:+16028889289" 
              class="flex items-center gap-2 px-4 py-2 bg-secondary text-white rounded-lg font-medium hover:bg-secondary/90 transition-colors"
            >
              <Icon name="mdi:phone" class="w-4 h-4" />
              <span>(602) 888-9289</span>
            </a>
          </li>
        </ul>
      </nav>
      <button
        id="open-nav-button"
        type="button"
        class="btn md:hidden"
        aria-label="Navigation"
      >
        <Icon name="mdi:menu" class="size-8" />
      </button>
      <ThemeSwitcher />
    </div>
    <div id="menu-modal" class="modal hidden" aria-hidden="true">
      <div class="fixed inset-0 bg-default px-8 py-4 text-default">
        <div class="space-y-4" role="dialog" aria-modal="true">
          <header class="text-right">
            <button
              id="close-nav-button"
              type="button"
              class="btn"
              aria-label="Close navigation"
            >
              <Icon name="mdi:close" class="size-8" />
            </button>
          </header>
          <div class="flex justify-center">
            <Image src={logoImage} alt="Home Services Wizard" class="h-16 w-16" width={64} height={64} />
          </div>
          <nav>
            <ul class="flex flex-col">
              {
                navItems.map(({ title, url }) => (
                  <li>
                    <a class="block py-4 text-center text-xl font-medium" href={url}>
                      {title}
                    </a>
                  </li>
                ))
              }
              <li class="pt-4">
                <a 
                  href="tel:+16028889289" 
                  class="flex items-center justify-center gap-2 px-6 py-4 bg-secondary text-white rounded-lg font-bold"
                >
                  <Icon name="mdi:phone" class="w-5 h-5" />
                  <span>Call (602) 888-9289</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  import MicroModal from "micromodal";
  import invariant from "tiny-invariant";

  const menuModalId = "menu-modal";

  const header = document.querySelector("#page-header") as HTMLElement;
  const page = document.documentElement;
  const menu = document.querySelector(`#${menuModalId} ul`);
  const openNavButton = document.querySelector("#open-nav-button");
  const closeNavButton = document.querySelector("#close-nav-button");

  invariant(header, "header should not be null");
  invariant(menu, "menu should not be null");
  invariant(openNavButton, "openNavButton should not be null");
  invariant(closeNavButton, "closeNavButton should not be null");

  const openMenu = () => {
    MicroModal.show(menuModalId, { disableScroll: true });
  };

  const closeMenu = () => {
    MicroModal.close(menuModalId);
  };

  openNavButton.addEventListener("click", openMenu);
  closeNavButton.addEventListener("click", closeMenu);

  document.addEventListener("scroll", () => {
    header.classList.toggle("fixed-header", page.scrollTop > 100);
  });

  menu.addEventListener("click", (event) => {
    if ((event.target as HTMLElement).tagName === "A") {
      closeMenu();
    }
  });
</script>

<noscript>
  <style>
    #open-nav-button {
      display: none;
    }
  </style>
</noscript>

<style>
  .logo-text {
    @apply text-white;
  }
  .fixed-header {
    @apply fixed bottom-auto top-0;
    @apply border-default bg-default text-default;
  }
  .fixed-header .logo-text {
    @apply text-primary;
  }
  .modal.is-open {
    @apply block;
  }
</style>
