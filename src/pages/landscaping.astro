---
import "@fontsource-variable/inter";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Footer from "~/components/footer.astro";
import Header from "~/components/header.astro";
import logoImage from "~/assets/logo.png";
import handymanHero from "~/assets/handyman-hero.png";
import "~/styles/index.css";

const { generator } = Astro;
const description =
  "Get comprehensive Landscaping Insurance in Arizona. Specialized coverage for landscapers, lawn care, and irrigation professionals. Fast quotes, competitive rates!";

