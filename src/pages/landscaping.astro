    <!-- Coverage Types Section -->
    <section id="coverage" class="bg-default px-8 py-24">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 font-extrabold text-3xl md:text-5xl">
