    details: [
      "Commercial mowers",
      "Trimmers & blowers",
      "Irrigation equipment",
      "Specialty tools",
    ],
  },
  {
    title: "Professional Liability (E&O)",
    description:
      "Covers claims arising from design errors, plant selection failures, or irrigation system problems.",
    icon: "mdi:certificate",
    details: [
      "Design errors",
      "Plant/tree failures",
      "Drainage issues",
      "Legal defense",
    ],
  },
  {
    title: "Pesticide & Chemical Coverage",
    description:
      "Coverage for herbicide and pesticide application, essential for Arizona landscapers dealing with desert pests.",
    icon: "mdi:spray",
    details: [
      "Application errors",
      "Drift damage",
      "Environmental claims",
      "EPA compliance",
    ],
