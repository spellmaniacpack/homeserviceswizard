const landscapingServices = [
  "Lawn Maintenance",
  "Desert Landscaping",
  "Irrigation Install",
  "Tree Trimming",
  "Hardscaping",
  "Pool Landscaping",
  "Commercial Grounds",
  "HOA Maintenance",
