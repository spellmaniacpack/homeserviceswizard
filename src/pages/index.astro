---
import "@fontsource-variable/inter";
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import Footer from "~/components/footer.astro";
import Header from "~/components/header.astro";
import logoImage from "~/assets/logo.png";
import "~/styles/index.css";

const { generator, site } = Astro;
const description =
  "Home Services Wizard - Your trusted partner for comprehensive insurance solutions tailored to home service professionals in Arizona. Get covered today!";

interface ProfessionCard {
  title: string;
  description: string;
  icon: string;
  url: string;
  available: boolean;
}

const professions: Array<ProfessionCard> = [
  {
    title: "Handyman Insurance",
    description:
      "Complete coverage for handyman professionals in Arizona. Protect your business with General Liability, Workers' Comp, and more.",
    icon: "mdi:hammer-wrench",
    url: "/handyman",
    available: true,
  },
  {
    title: "HVAC Contractor Insurance",
    description:
      "Specialized insurance for HVAC contractors in Arizona. Coverage for equipment, liability, and professional services.",
    icon: "mdi:air-conditioner",
    url: "/hvac",
    available: true,
  },
  {
    title: "Plumber Insurance",
    description:
      "Comprehensive coverage for plumbing contractors in Arizona. Protect against water damage claims and more.",
    icon: "mdi:pipe-wrench",
    url: "/plumber",
    available: true,
  },
  {
    title: "Electrician Insurance",
    description:
      "Professional liability and general coverage for Arizona electrical contractors.",
    icon: "mdi:flash",
    url: "/electrician",
    available: true,
  },
  {
    title: "Landscaping Insurance",
    description:
      "Full coverage for Arizona landscaping and lawn care professionals.",
    icon: "mdi:flower",
    url: "/landscaping",
    available: true,
  },
  {
    title: "Roofing Insurance",
    description:
      "Specialized insurance for Arizona roofing contractors dealing with extreme heat.",
    icon: "mdi:home-roof",
    url: "/roofing",
    available: true,
  },
];

const benefits = [
  {
    title: "Arizona Specialists",
    description:
      "We understand the unique insurance needs of Arizona home service professionals. From the Phoenix heat to Tucson regulations.",
    icon: "mdi:map-marker",
  },
  {
    title: "Fast Online Quotes",
    description:
      "Get your personalized insurance quote in minutes. No lengthy paperwork or waiting on hold.",
    icon: "mdi:lightning-bolt",
  },
  {
    title: "Comprehensive Coverage",
    description:
      "From General Liability to Workers' Compensation, we offer all the coverage you need in one place.",
    icon: "mdi:shield-check",
  },
  {
    title: "Affordable Rates",
    description:
      "We work with top-rated carriers to find you the best rates without sacrificing coverage quality.",
    icon: "mdi:currency-usd",
  },
];
---

<!doctype html>
<html lang="en" class="h-full motion-safe:scroll-smooth" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <meta name="generator" content={generator} />

    <title>
      Home Services Wizard | Insurance for Home Service Professionals in Arizona
    </title>
    <meta name="description" content={description} />
    <link rel="canonical" href="https://www.homeserviceswizard.com/" />

    <!-- social media -->
    <meta
      property="og:title"
      content="Home Services Wizard - Insurance for Home Service Pros"
    />
    <meta property="og:type" content="website" />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://www.homeserviceswizard.com/" />
    <meta name="twitter:card" content="summary_large_image" />

    <!-- initialize theme -->
    <script is:inline>
      const themeSaved = localStorage.getItem("theme");

      if (themeSaved) {
        document.documentElement.dataset.theme = themeSaved;
      } else {
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)",
        ).matches;
        document.documentElement.dataset.theme = prefersDark ? "dark" : "light";
      }

      window
        .matchMedia("(prefers-color-scheme: dark)")
        .addEventListener("change", (event) => {
          if (!localStorage.getItem("theme")) {
            document.documentElement.dataset.theme = event.matches
              ? "dark"
              : "light";
          }
        });
    </script>
  </head>
  <body
    class="h-full overflow-x-hidden bg-default text-default text-base selection:bg-secondary selection:text-white"
  >
    <Header />

    <!-- Hero Section -->
    <section
      class="relative flex min-h-screen items-center justify-center overflow-hidden bg-gradient-to-br from-slate-900 via-blue-900 to-slate-900"
    >
      <!-- Animated background elements -->
      <div class="absolute inset-0 overflow-hidden">
        <div
          class="absolute left-10 top-20 h-72 w-72 animate-pulse rounded-full bg-blue-500/20 blur-3xl"
        >
        </div>
        <div
          class="absolute bottom-20 right-10 h-96 w-96 animate-pulse rounded-full bg-amber-500/10 blur-3xl"
          style="animation-delay: 1s;"
        >
        </div>
        <div
          class="absolute left-1/2 top-1/2 h-[600px] w-[600px] -translate-x-1/2 -translate-y-1/2 rounded-full bg-blue-600/5 blur-3xl"
        >
        </div>
      </div>

      <div class="relative z-10 mx-auto max-w-6xl px-6 py-20 text-center">
        <div class="mb-8 flex justify-center">
          <Image
            src={logoImage}
            alt="Home Services Wizard Logo"
            class="h-32 w-32 object-contain drop-shadow-2xl md:h-40 md:w-40"
            width={160}
            height={160}
          />
        </div>

        <h1
          class="mb-6 font-extrabold tracking-tight text-white text-4xl md:text-6xl lg:text-7xl"
        >
          <span
            class="bg-gradient-to-r from-blue-400 via-blue-300 to-amber-400 bg-clip-text text-transparent"
          >
            Insurance Made Simple
          </span>
          <br />
          <span class="text-white">for Home Service Pros</span>
        </h1>

        <p
          class="mx-auto mb-10 max-w-3xl leading-relaxed text-blue-100/80 text-xl md:text-2xl"
        >
          Protect your Arizona home services business with comprehensive
          insurance coverage. Fast quotes, affordable rates, and expert support.
        </p>

        <div
          class="flex flex-col items-center justify-center gap-4 sm:flex-row"
        >
          <a
            href="#professions"
            class="group flex items-center gap-3 rounded-xl bg-gradient-to-r from-amber-500 to-amber-600 px-8 py-4 font-bold text-white shadow-lg shadow-amber-500/25 transition-all duration-300 hover:scale-105 hover:shadow-amber-500/40"
          >
            <Icon name="mdi:shield-check" class="h-6 w-6" />
            <span>Get Your Free Quote</span>
            <Icon
              name="mdi:arrow-right"
              class="h-5 w-5 transition-transform group-hover:translate-x-1"
            />
          </a>
          <a
            href="tel:+16028889289"
            class="flex items-center gap-3 rounded-xl border-2 border-white/30 px-8 py-4 font-semibold text-white transition-all duration-300 hover:border-white/50 hover:bg-white/10"
          >
            <Icon name="mdi:phone" class="h-5 w-5" />
            <span>Call (602) 888-9289</span>
          </a>
        </div>

        <div
          class="mt-12 flex flex-wrap justify-center gap-8 text-blue-200/60 text-sm"
        >
          <div class="flex items-center gap-2">
            <Icon name="mdi:check-circle" class="h-5 w-5 text-green-400" />
            <span>Licensed in Arizona</span>
          </div>
          <div class="flex items-center gap-2">
            <Icon name="mdi:check-circle" class="h-5 w-5 text-green-400" />
            <span>A+ Rated Carriers</span>
          </div>
          <div class="flex items-center gap-2">
            <Icon name="mdi:check-circle" class="h-5 w-5 text-green-400" />
            <span>Same-Day Coverage</span>
          </div>
        </div>
      </div>

      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
        <Icon name="mdi:chevron-down" class="h-8 w-8 text-white/50" />
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="bg-default px-8 py-24">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 font-extrabold text-3xl md:text-5xl">
            Why Choose <span class="text-primary">Home Services Wizard?</span>
          </h2>
          <p class="mx-auto max-w-2xl text-offset text-xl">
            We specialize in protecting Arizona's home service professionals
            with tailored insurance solutions.
          </p>
        </div>

        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
          {
            benefits.map((benefit) => (
              <div class="hover:border-primary/50 hover:shadow-primary/5 group rounded-2xl border border-default bg-offset p-8 transition-all duration-300 hover:-translate-y-1 hover:shadow-xl">
                <div class="mb-6 flex h-14 w-14 items-center justify-center rounded-xl bg-gradient-to-br from-primary to-secondary transition-transform group-hover:scale-110">
                  <Icon name={benefit.icon} class="h-7 w-7 text-white" />
                </div>
                <h3 class="mb-3 font-bold text-xl">{benefit.title}</h3>
                <p class="leading-relaxed text-offset text-sm">
                  {benefit.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Professions Section -->
    <section id="professions" class="bg-offset px-8 py-24">
      <div class="mx-auto max-w-6xl">
        <div class="mb-16 text-center">
          <h2 class="mb-4 font-extrabold text-3xl md:text-5xl">
            Insurance by <span class="text-primary">Profession</span>
          </h2>
          <p class="mx-auto max-w-2xl text-offset text-xl">
            Select your profession to get a customized insurance quote tailored
            to your specific needs.
          </p>
        </div>

        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
          {
            professions.map((profession) => (
              <a
                href={profession.available ? profession.url : "#"}
                class={`group relative rounded-2xl border p-8 transition-all duration-300 ${
                  profession.available
                    ? "hover:shadow-primary/10 cursor-pointer border-default bg-default hover:-translate-y-2 hover:border-primary hover:shadow-2xl"
                    : "bg-default/50 border-default/50 cursor-not-allowed opacity-60"
                }`}
              >
                {!profession.available && (
                  <div class="bg-secondary/20 absolute right-4 top-4 rounded-full px-3 py-1 font-bold text-secondary text-xs">
                    Coming Soon
                  </div>
                )}
                <div
                  class={`mb-6 flex h-16 w-16 items-center justify-center rounded-2xl transition-all duration-300 ${
                    profession.available
                      ? "to-primary/70 group-hover:shadow-primary/30 bg-gradient-to-br from-primary group-hover:scale-110 group-hover:shadow-lg"
                      : "bg-gray-600/50"
                  }`}
                >
                  <Icon name={profession.icon} class="h-8 w-8 text-white" />
                </div>
                <h3 class="mb-3 flex items-center gap-2 font-bold text-xl">
                  {profession.title}
                  {profession.available && (
                    <Icon
                      name="mdi:arrow-right"
                      class="h-5 w-5 -translate-x-2 text-primary opacity-0 transition-all group-hover:translate-x-0 group-hover:opacity-100"
                    />
                  )}
                </h3>
                <p class="leading-relaxed text-offset text-sm">
                  {profession.description}
                </p>
              </a>
            ))
          }
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-gradient-to-r from-primary to-blue-700 px-8 py-24">
      <div class="mx-auto max-w-4xl text-center">
        <h2 class="mb-6 font-extrabold text-white text-3xl md:text-5xl">
          Ready to Protect Your Business?
        </h2>
        <p class="mx-auto mb-10 max-w-2xl text-blue-100 text-xl">
          Join thousands of Arizona home service professionals who trust Home
          Services Wizard for their insurance needs.
        </p>
        <div class="flex flex-col justify-center gap-4 sm:flex-row">
          <a
            href="#professions"
            class="rounded-xl bg-white px-8 py-4 font-bold text-primary shadow-lg transition-all duration-300 hover:scale-105 hover:shadow-xl"
          >
            Get Started Today
          </a>
          <a
            href="tel:+16028889289"
            class="flex items-center justify-center gap-2 rounded-xl border-2 border-white px-8 py-4 font-semibold text-white transition-all duration-300 hover:bg-white/10"
          >
            <Icon name="mdi:phone" class="h-5 w-5" />
            Speak with an Expert
          </a>
        </div>
      </div>
    </section>

    <Footer />
  </body>
</html>
